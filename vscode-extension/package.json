{
  "name": "zxide",
  "displayName": "zxide",
  "description": "Integrated Development environment for Zx Spectrum ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.zxide"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zx-ide.create-project",
        "title": "%extension.cmd-title.create-project%"
      },
      {
        "command": "zx-ide.configure-z88dk-project",
        "title": "%extension.cmd-title.configure-z88dk-project%"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "zx-ide.configure-z88dk-project",
          "when": "ZxIdeProjectType == 'ZxSpectrumZ88dk'"
        }
      ]
    }
  },
  "scripts": {
    "build-cli": "npm --prefix ../cli run build",
    "vscode:prepublish": "vscode-nls-dev -v && npm run package",
    "watch": "npm run build-cli && webpack --watch",
    "package": "npm run build-cli && webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --relative"
    }
  },
  "lint-staged": {
    "*.{html, js, ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "inversify": "^6.0.3",
    "loglevel": "^1.9.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-electron": "^2.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "glob": "^8.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "mocha": "^10.2.0",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^7.0.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}