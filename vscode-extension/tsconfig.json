{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "types": [
      "reflect-metadata"
    ],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@commands/*": [
        "src/commands/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
    }
  }
}