{
  "name": "zx-ide-cli",
  "version": "1.0.0",
  "description": "cli for zx spectrum development with zxide vscode extension",
  "keywords": [
    "zx spectrum",
    "cli",
    "zxide"
  ],
  "author": "David Gonz√°lez Zornoza <dgzornoza@dgzornoza.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgzornoza/zx-ide.git"
  },
  "bugs": {
    "url": "https://github.com/dgzornoza/zx-ide/issues"
  },
  "main": "./dist/zx-ide-cli.js",
  "scripts": {
    "prepublish": "npm run build",
    "start": "webpack --mode development --config webpack.config.js && node --inspect=9229 dist/zx-ide-cli.js",
    "build": "webpack --mode production --config webpack.prod.js",
    "lint": "eslint src --ext ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --relative"
    }
  },
  "lint-staged": {
    "*.{html, js, ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.1",
    "commander": "^10.0.1",
    "figlet": "^1.6.0",
    "os-locale": "^6.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^7.0.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}
